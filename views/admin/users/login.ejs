<%- include('../../partials/header.ejs') %>

<div class="container">
  <hr />
  <div class="card mt-5">
    <div class="card-header">
      <h2>Login de Admin</h2>
      <div class="card-body">
        <form action="/authenticate" method="POST">
          <input
            class="form-control"
            type="email"
            name="email"
            placeholder="email@email.com"
          />
          <br />
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="******"
          />
          <br />
          <button type="submit" class="btn btn-success btn-block">Logar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%-include('../../partials/footer.ejs') %>
