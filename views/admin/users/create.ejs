<%- include('../../partials/header.ejs') %>
<%-include('../../partials/navbar.ejs') %>

<div class="container">
  <hr />
  <div class="card mt-5">
    <div class="card-header">
      <h2>Criação de usuários</h2>
      <div class="card-body">
        <form action="/users/create" method="POST">
          <input
            class="form-control"
            type="email"
            name="email"
            placeholder="email@email.com"
          />
          <br />
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="******"
          />
          <br />
          <button type="submit" class="btn btn-success btn-block">Criar</button>
        </form>
      </div>
    </div>
  </div>
</div>

